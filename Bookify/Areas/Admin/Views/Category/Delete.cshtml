@model Category


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Category</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Are you sure you want to delete this item?</h2>
        <form method="post" asp-controller="Category">
            <input  asp-for="Id" hidden/>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">

                <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter category name" asp-for="Name" disabled>
             
            </div>

            <div class="mb-3">
                <input type="number" asp-for="DisplayOrder" class="form-control" id="DisplayOrder" name="DisplayOrder" placeholder="Enter display order" disabled>
              
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

</body>
</html>
