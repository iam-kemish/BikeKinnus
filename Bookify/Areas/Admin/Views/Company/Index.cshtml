@model IEnumerable<Company>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Table</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <form method="post">
        <div class="container my-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Category Table</h2>
                <a class="btn btn-primary" asp-controller="Company" asp-action="CreateUpdate">Create New Company</a>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.StreetAddress</td>
                            <td>@item.City</td>
                            <td>@item.State</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <div class="d-flex justify-content-start gap-2">
                                    <a class="btn btn-warning btn-sm" asp-controller="Company" asp-action="CreateUpdate" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    <script src="~/js/product.js"></script>
}