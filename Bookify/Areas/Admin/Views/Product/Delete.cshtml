@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <form method="post" asp-controller="Product">
        <input asp-for="Id" hidden />
        <div class="card shadow border-0 mt-4 mb-4">
            <div class="card-header bg-danger bg-gradient text-light py-4">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-white text-uppercase">Delete Confirmation</h3>
                        <p class="text-white-50 fw-semibold mb-0">Are you sure you want to delete this product?</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" alt="Product Image" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <h4 class="text-dark fw-bold">@Model.Title</h4>
                        <div class="mb-2">
                            <span class="badge bg-secondary">@Model.Category?.Name</span>
                        </div>
                        <p class="text-secondary">@Model.Description</p>
                        <ul class="list-group">
                            <li class="list-group-item">Brand: <strong>@Model.Brand</strong></li>
                            <li class="list-group-item">Engine Capacity: <strong>@Model.EngineCapacity</strong></li>
                            <li class="list-group-item">Mileage: <strong>@Model.Mileage</strong></li>
                            <li class="list-group-item text-danger">
                                <strong>Warning:</strong> Deleting this product is irreversible!
                            </li>
                        </ul>
                        <div class="mt-4 d-flex gap-3">
                            <button type="submit" class="btn btn-danger fw-semibold">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary fw-semibold">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
