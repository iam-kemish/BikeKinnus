@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Are you sure you want to delete this item?</h2>
        <form method="post" asp-controller="Product" >
            <div class="mb-3">
                <label class="form-label">Product Title</label>   
                <input type="text" class="form-control" asp-for="Title" disabled>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" asp-for="Description" class="form-control"  disabled>
            </div>
            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" asp-for="Author" class="form-control" disabled>
            </div>
            <div class="mb-3">
                <label class="form-label">ISBN</label>
                <input type="text" asp-for="ISBN" class="form-control"  disabled>
            </div>
            <div class="mb-3">
                <label class="form-label"></label>
                <input type="number" asp-for="ListPrice" class="form-control"  disabled>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="ListPrice" class="form-control"  disabled>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="Price" class="form-control"  disabled>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="Price50" class="form-control" disabled>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="Price100" class="form-control"  disabled>
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
    </body>
    </html>