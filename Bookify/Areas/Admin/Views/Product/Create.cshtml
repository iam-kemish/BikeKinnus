@model Bookify.Models.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Category</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Create New Product</h2>
        <form method="post" asp-controller="Product" asp-action="Create">
            <div class="mb-3">
                <label class="form-label">Product Title</label>
                <input type="text" class="form-control" placeholder="Enter title" asp-for="Title" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" asp-for="Description" class="form-control"  placeholder="Enter Description" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Author</label>
                <input type="text" asp-for="Author" class="form-control" placeholder="Enter Author" required>
            </div>

            <div class="mb-3">
                <label class="form-label">ISBN</label>
                <input type="text" asp-for="ISBN" class="form-control" placeholder="Enter ISBN" required>
            </div>
            <div class="mb-3">
                <label class="form-label"></label>
                <input type="number" asp-for="ListPrice" class="form-control" placeholder="Enter Price" required>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="ListPrice" class="form-control" placeholder="Enter Listed Price" required>
            </div>

            <div class="mb-3">
                <input type="number" asp-for="Price" class="form-control" placeholder="Enter Price" required>
            </div>

            <div class="mb-3">
                <input type="number" asp-for="Price50" class="form-control" placeholder="Enter Price 50" required>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="Price100" class="form-control" placeholder="Enter Price 100" required>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

</body>
</html>
