@model IEnumerable<BikeKinnus.Models.Models.Product>

@{
    ViewData["Title"] = "Bike Showcase";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Available Bikes</h2>
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
                <!-- Adjusted column size for larger cards -->
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <!-- Bike Image -->
                            <img src="@product.ImageUrl"
                                 class="card-img-top rounded large-img"
                                 alt="Bike Image" />

                            <!-- Card Body -->
                            <div class="card-body pb-0">
                                <div class="pl-1 text-center">
                                    <h5 class="card-title text-uppercase text-dark opacity-75 mb-2">
                                        @product.Title
                                    </h5>
                                    <p class="text-warning mb-2">
                                        <b>Brand:</b> @product.Brand
                                    </p>
                                    <p class="text-secondary mb-2">
                                        <b>Year:</b> @product.ModelYear
                                    </p>
                                    <p class="text-secondary mb-2">
                                        <b>Engine:</b> @product.EngineCapacity cc
                                    </p>
                                    <p class="text-secondary mb-2">
                                        <b>Mileage:</b> @product.Mileage km/l
                                    </p>
                                    <p class="text-dark text-opacity-75 mb-3">
                                        <b>Price:</b> Rs.@product.Price
                                    </p>
                                </div>
                            </div>

                            <!-- Details Button -->
                            <div class="mt-3">
                                <a asp-action="Details"
                                   asp-route-ProductId="@product.Id"
                                   asp-controller="Home"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Larger Image Styling */
    .large-img {
        height: 300px; /* Adjust the height for larger image */
        width: 100%; /* Ensures it spans the full width of the card */
        object-fit: contain; /* Prevents cropping and maintains image quality */
        border-radius: 10px; /* Keeps rounded corners */
    }

    /* Card Styling */
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.05); /* Slightly enlarges on hover for better visual appeal */
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2); /* Adds a hover shadow effect */
        }
</style>
