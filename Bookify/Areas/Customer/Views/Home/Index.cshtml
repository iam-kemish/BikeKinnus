@model IEnumerable<BikeKinnus.Models.Models.Product>

@{
    ViewData["Title"] = "Bike Showcase";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Available Bikes</h2>
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <!-- Bike Image -->
                            <img src="@product.ImageUrl" class="card-img-top rounded equal-img" alt="Bike Image" />

                            <!-- Card Body -->
                            <div class="card-body pb-0">
                                <div class="pl-1 text-center">
                                    <h5 class="card-title text-uppercase text-dark opacity-75 mb-1">
                                        @product.Title
                                    </h5>
                                    <p class="text-warning mb-1">
                                        <b>Brand:</b> @product.Brand
                                    </p>
                                    <p class="text-secondary mb-1">
                                        <b>Year:</b> @product.ModelYear
                                    </p>
                                    <p class="text-secondary mb-1">
                                        <b>Engine:</b> @product.EngineCapacity cc
                                    </p>
                                    <p class="text-secondary mb-1">
                                        <b>Mileage:</b> @product.Mileage km/l
                                    </p>
                                    <p class="text-dark text-opacity-75 mb-1">
                                        <b>Price:</b> Rs.@product.Price
                                    </p>
                                </div>
                            </div>

                            <!-- Details Button -->
                            <div class="mt-3">
                                <a asp-action="Details"
                                   asp-route-ProductId="@product.Id"
                                   asp-controller="Home"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Equal Image Size Class */
    .equal-img {
        height: 200px; /* Adjust the height as per your layout */
        width: 100%; /* Ensures it spans the full width of the card */
        object-fit: cover; /* Maintains image proportions while covering the area */
        border-radius: 5px; /* Keeps rounded corners */
    }
</style>
