@model BuyingCart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <!-- Card for Product Details -->
        <div class="card shadow border-0">
            <div class="card-header bg-primary bg-gradient text-white py-4">
                <div class="text-center">
                    <h3 class="text-uppercase fw-bold">Product Details</h3>
                    <p class="text-white-50 fw-semibold mb-0">See the details of the product below</p>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Product Image -->
                    <div class="col-12 col-lg-4 text-center mb-4">
                        <img src="@Model.Product.ImageUrl" class="img-fluid rounded shadow-sm" alt="Product Image" />
                    </div>
                    <!-- Product Details -->
                    <div class="col-12 col-lg-8">
                        <h4 class="fw-bold text-dark">@Model.Product.Title</h4>
                        <div class="mb-3">
                            <span class="badge bg-secondary">@Model.Product.Category?.Name</span>
                        </div>
                        <p class="text-muted">@Model.Product.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Brand:</strong> @Model.Product.Brand</li>
                            <li class="list-group-item"><strong>Engine Capacity:</strong> @Model.Product.EngineCapacity</li>
                            <li class="list-group-item"><strong>Mileage:</strong> @Model.Product.Mileage</li>
                            <li class="list-group-item"><strong>Price:</strong> $@Model.Product.Price</li>
                        </ul>

                        <!-- Count Section -->
                        <div class="d-flex align-items-center gap-2 mt-3">
                            <label for="count" class="fw-semibold">Count:</label>
                            <input asp-for="Count" type="number" id="count" value="1" min="1" max="3" class="form-control w-25 text-center" />
                        </div>

                        <div class="mt-4 d-flex gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary fw-semibold">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <!-- Add to Cart Button -->
                            <form method="post" asp-action="AddToCart" asp-route-id="@Model.Product.Id">
                                <button type="submit" class="btn btn-success fw-semibold">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
